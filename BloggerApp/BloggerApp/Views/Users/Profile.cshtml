@model User

<div class="row">
    <div class="col-md-2">
        <div class="bg-white p-2">
            <img src="/img/@Model.Image" class="img-fluid">
        </div>
    </div>
    <div class="col-md-10">
        <div class="bg-white p-2">
            <h5>@Model.Name</h5>
            <hr>
            <div id="posts">
                <h5 class="my-4">Yayına Gönderilenler</h5>
                <ul class="list-group">
                    @foreach(var post in @Model.Posts){
                        <li class="list-group-item"><i class="bi bi-caret-right-fill"></i><a class="normallink" href="/blogs/details/@post.Url">@post.Title</a></li>
                    }
                </ul>
            </div>
            <div id="comments">
                <h5 class="my-4">Yorumlar</h5>
            </div>
        </div>
    </div>
</div>