@model IEnumerable<AppRole>

<a class="btn btn-primary" asp-action="Create">Create Role</a>
<hr>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Adı</th>
            <th>Kullanıcılar</th>
            <th style="width: 125px;"></th>
        </tr>
    </thead>
    @if(Model.Count()==0){
        <tr><td colspan="4"class="text-center">Role Yok</td></tr>
    }

    @foreach(var role in Model){
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td asp-role-users="@role.Id"></td>
            <td>
                <form method="post">
                    <a asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id"  class="btn btn-primary btn-sm">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>